package com.rahul.orders.models;

import org.springframework.data.cassandra.core.mapping.Table;

@Table(value ="order_items")
/*
 * @Data
 * 
 * @NoArgsConstructor
 * 
 * @AllArgsConstructor
 */
public class Order {
	
	@PrimaryKey
	@NotNull(message="Order id can not be null")
	private Integer id;
	//@FutureOrPresent
	private Date date;
	@Size(min=3, max=50)
	@Column(value ="customer_name")
	private String customerName;
	@Email
	@Column(value ="customer_email")
	private String customerEmail;
	@CassandraType(type = DataType.Name.UDT, userTypeName = "address")
	@Column(value ="customer_address")
	private Address customerAddress;
	@CassandraType(type = DataType.Name.UDT, userTypeName = "item")
	@Column(value ="items")
	private Item item;
	private Integer total;
	
	

}
version: "3.6"
services:
  cassandra:
    image: "cassandra:latest"
   
    ports:
      - "9042:9042"
    network_mode: "host"
    volumes:
      - "./cassandra-init.sh:/cassandra-init.sh"
    command: "sh /cassandra-init.sh"
    
  registry:
    image: apiregistry:latest
    ports:
      - "8761:8761"
  
  gateway:
    image: apigateway:latest
    ports:
      - "8765:8765"
    links:
      - registry
    environment:
    - EUREKA_CLIENT_SERVICEURL_DEFAULTZONE=http://registry:8761/eureka
    restart: on-failure

    
  product:
    image: productservice:latest
    ports:
      - "1971:1971"
    network_mode: "host"
    depends_on: 
        - cassandra
        - gateway
    restart: always
    
  order:
    image: orderservice:latest
    ports:
      - "1199:1199"
    network_mode: "host"
    depends_on: 
        - cassandra
        - gateway
    restart: always 
    
    

 
  supplier:
    image: supplierservice:latest
    ports:
      - "1999:1999"
    network_mode: "host"
    depends_on: 
        - cassandra
        - gateway
    restart: always   
      
    

 